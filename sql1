-- Задание 1.2
SELECT 
  season,
  sum(home_team_goals) as total_home_goals,
  sum(away_team_goals) as total_away_goals
FROM 
  sql.matches
group by 
  season
ORDER by season


SELECT count(teams.id)
FROM
    sql.teams,
    sql.matches


SELECT *
FROM
    sql.teams,
    sql.matches
where 
    away_team_api_id = api_id or home_team_api_id = api_id
limit 10
  


SELECT 
*
FROM
    sql.teams,
    sql.matches
WHERE away_team_api_id = api_id
